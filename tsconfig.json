{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "target": "ES6",
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "drizzle.config.ts",
        "data/schema.ts",
        "config.ts",
        "server.ts"
    ]
}
